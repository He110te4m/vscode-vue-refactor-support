{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["ES2019", "ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "out",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"]
}
