{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": false,
    "importHelpers": true,
    "lib": ["ES2019", "ES2020"],
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
